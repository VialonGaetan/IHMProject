<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.ihm.MenuController">
    <center>
        <VBox fx:id="menuBar" prefHeight="481.0" prefWidth="155.0">
            <children>
                <ImageView fitHeight="155.0" fitWidth="155.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image fx:id="img" url="images/icones/logo.svg" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="30.0" left="10.0" top="10.0" />
                    </VBox.margin>
                </ImageView>
                <Button id="buttonHome" minHeight="55.0" minWidth="55.0" mnemonicParsing="false" onAction="#home">
                    <VBox.margin>
                        <Insets bottom="0.0" />
                    </VBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="images/icones/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="buttonSales" mnemonicParsing="false" onAction="#sales" prefHeight="55.0" prefWidth="55.0" text="" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="0.0" />
                    </VBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="images/icones/sales.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="buttonDescri" mnemonicParsing="false" onAction="#description" prefHeight="55.0" prefWidth="55.0" text="" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="0.0" />
                    </VBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="images/icones/description.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="buttonGallery" mnemonicParsing="false" onAction="#gallery" prefHeight="55.0" prefWidth="55.0" text="" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="0.0" />
                    </VBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="images/icones/gallery.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="buttonPosition" mnemonicParsing="false" onAction="#map" prefHeight="55.0" prefWidth="55.0" text="" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="images/icones/position.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#exit" prefHeight="55.0" prefWidth="55.0" text="" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="images/icones/exit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
