            <Image url="@../images/produitsPhares/PF1.jpg" />
         </image>
      </ImageView>
      <Label fx:id="descriGallery" layoutX="84.0" layoutY="466.0" prefHeight="123.0" prefWidth="1028.0" wrapText="true">
         <font>
            <Font name="Calibri" size="23.0" />
         </font>
      </Label>
      <Label fx:id="titleGallery" layoutX="111.0" layoutY="438.0" prefHeight="28.0" prefWidth="300.0">
