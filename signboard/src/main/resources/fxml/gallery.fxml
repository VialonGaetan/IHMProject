            <Font name="Calibri Bold" size="23.0" />
         </font>
      </Label>
      <Button fx:id="GalleryLeftButton" layoutX="116.0" layoutY="221.0" mnemonicParsing="false" onAction="#beforeImage" prefHeight="37.0" prefWidth="36.0" text="L" />
