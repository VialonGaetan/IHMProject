                  </ImageView>
               </graphic>
            </MenuItem>
            <MenuItem fx:id="english" mnemonicParsing="false" onAction="#changeLanguage">
               <graphic>
                  <ImageView fitHeight="57.0" fitWidth="91.0">
                     <image>
                        <Image url="@../images/langues/drapeauRU.jpg" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
            </MenuItem>
         </items>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </MenuButton>
